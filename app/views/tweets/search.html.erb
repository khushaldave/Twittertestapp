<div class="container">
<div id="map" style='width: 100%; height: 400px;'></div>
</div>
 <div class="container" class="center-block"  >
<div class="container">
            <% if current_user %>
      <%= form_for :searchtweet, :html => {:id=> 'search_tweet'} ,url: tweets_search_path, method: :post  do |t| %>
  <h2 style="font-weight:bold;font-size:24px;" ><%= t.text_field :hashtag , :size => 80 %>
  <button type="#{<% t.submit %>}" class="btn btn-primary" >Search</button> </h2>
  <% end %><%end%><hr/>
</div>
 <% if @tweet.nil? %>
 <% else %>
 <h2>Showing results for:- <%= params[:searchtweet][:hashtag]%></h2>
 <table class="table table-striped" style='width: 100%;'>
  <tr>
    <th>Location</th>
     <th>Profile Image</th>
    <th>Number of Followers</th>
    <th>Num of Status </th>
    <th> Tweet Text</th>
     <th>Lattitude</th>
    <th> Longitude</th>
     <th> Source</th>
      <th> Retweet Count</th>
     <th> Tweei Id</th>
  </tr>
 
    <% @tweet.each do |tweet| %>
  <tr><td class="text-primary" class="bg-primary">    <%=tweet[:location]%></td>
<td> <img   class="img-circle"src=<%=tweet[:profile_pic]%>/> </td>
  <td>  <%=tweet[:friends_count]%></td>
  <td>  <%=tweet[:status_count]%></td>
  <td>    <%=tweet[:text]%></td>
  <td>  <%=tweet[:lat]%></td>
    <td>  <%=tweet[:lng]%></td>
     <td>  <%=tweet[:Source]%></td>
     <td>  <%=tweet[:retweet_count]%></td>
     <td>  <%=tweet[:tweet_id]%></td>
    </tr>
<%end%>
</table>
 <script type="text/javascript">
    handler = Gmaps.build('Google');

handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @tweet.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
    </script>
    
<%end%>