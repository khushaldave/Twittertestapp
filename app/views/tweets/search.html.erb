<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="container">
<div id="map" style='width: 100%; height: 400px;'></div>
</div>
 <div class="container" class="center-block"  >
 <% if @tweet.nil? %>
 <% else %>
 <h2>Showing results for:- <%= params[:searchtweet][:hashtag]%></h2>
 <table class="table table-striped" >
  <tr>
    <th>Location</th>
     <th>Profile Image</th>
    <th>Number of Followers</th>
    <th>Num of Status </th>
    <th> Tweet Text</th>
     <th>Lattitude</th>
    <th> Longitude</th>
     <th> Source</th>
  </tr>
 
    <% @tweet.each do |tweet| %>
  <tr><td class="text-primary" class="bg-primary">    <%=tweet[:location]%></td>
<td> <img   class="img-circle"src=<%=tweet[:profile_pic]%>/> </td>
  <td>  <%=tweet[:friends_count]%></td>
  <td>  <%=tweet[:status_count]%></td>
  <td>    <%=tweet[:text]%></td>
  <td>  <%=tweet[:lat]%></td>
    <td>  <%=tweet[:lng]%></td>
     <td>  <%=tweet[:Source]%></td>
    </tr>
<%end%>
</table>
<%= raw @tweet.to_json%>
 <script type="text/javascript">
    handler = Gmaps.build('Google');

handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @tweet.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
    </script>
    
<%end%>