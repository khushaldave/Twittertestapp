<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="container">
<div id="map" style='width: 1124px; height: 400px;'></div>
</div>
 <div class="container" class="center-block">
 <h2>Showing results for:- <%= params[:searchtweet][:hashtag]%></h2>
 <table class="table table-striped">
  <tr>
    <th>Location</th>
    <th> Profile Pic</th>
    <th>Number of Followers</th>
    <th>Num of Status </th>
    <th> Tweet Text</th>
  </tr>
 
    <% @tweets.each do |tweet| %>
  <tr><td class="text-primary" class="bg-primary">    <%=tweet.user["location"]%></td>
  <td> <img   class="img-circle"src=<%=tweet.user["profile_image_url"]%>/> </td>
  <td>  <%=tweet.user["friends_count"]%></td>
  <td>  <%=tweet.user["statuses_count"]%></td>
  <td>    <%=tweet.text%></td></tr>
<%end%>
</table>
<h2><%= @loc.to_json %></h2>

</div>
 <script type="text/javascript">
    handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @loc.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
    </script>
