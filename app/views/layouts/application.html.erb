          <li><a href="/home/help">How to do!</a></li>
        </ul>
      </li>
    </ul>
    
     
    <ul class="nav navbar-nav navbar-right">
    <% if current_user %>
        <li>Signed in as <span class="label label-success"><%= current_user.name %></span></li>
        <li>
        <a href="/signout">Sign Out</a></li>
      <% else %>
       
       <a href="/auth/twitter"> <%= image_tag "sign-in-with-twitter.png" %></a>
      <% end %>
         <li><a href="#shortcut" class="dropdown-toggle" data-toggle="modal">Accessiblity</a></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">More<b class="caret"></b></a>
        <ul class="dropdown-menu">
<li><a href="/home/about_us">About Us!</a></li>
<li><a href="/home/contact_us">Contact Us!</a></li>
          <li class="divider"></li>

          <li class="dropdown-header">Plan</li>
          <li><a href="/home/plans">Subscribe</a></li>
        </ul>
      </li>
    </ul>
  </div>
</div>
  </div>
    
<% if flash[:notice] %>
 <div class="container" style="margin-top: 5%;">
<div class="container">
    <div class="alert alert-success">
  <button type="button" class="close" data-dismiss="alert">X</button>
  <%= flash[:notice]%>
</div> </div>
  <%end%></div>


  <div id="maincontent">
    <%= yield %>
</div>


    <div class="footer">
</div> 
<div class="navbar-fixed-bottom" style='background-color: #f5f5f5;'><%= display_cookie_alert %>
