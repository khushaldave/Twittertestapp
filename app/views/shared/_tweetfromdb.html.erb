<tr><th>Picture</th>
    <th>infowindow</th>
     <th>lat</th>
    <th>lng</th></tr>
<% for tweet in @tweets %>
<tr>
<td> <%=tweet.profile_pic%> </td>
  <td> <img src="<%=tweet.profile_pic%>" class="img-circle"/><%=tweet.tweet_text%></b> <i>Location : <%=tweet.location%></i></td>
  <td>  <%=tweet.lattitude%></td>
    <td>  <%=tweet.longitude%></td>
     <% end %>
</table>
</div>


  